{% set SiteName = GetConfig('Site_Name') %}
{% set ColorVersion = GetConfig('Site_Theme') %}

<!DOCTYPE html>
<html lang="{{ app.request.locale }}" class="h-100" data-bs-theme="{{ ColorVersion }}">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %} :: {{ SiteName }}</title>
{% block meta %}
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
{% block stylesheets %}
		<link rel="stylesheet" href="{{ asset('Css/Bootstrap/bootstrap.css') }}">
		<link rel="stylesheet" href="{{ asset('Css/App-Bootstrap.css') }}">
{% endblock %}
{% block javascripts %}{% block importmap %}{{ importmap(['app']) }}{% endblock %}{% endblock %}

    </head>
    <body class="d-flex flex-column h-100" style="padding-top: 5.5rem;">
<header>
{% include '@Bootstrap/Navbar.twig' %}
		</header>
		<main class="container">
{% block body %}{% endblock %}
		</main>
		<footer class="footer mt-auto d-flex flex-wrap justify-content-between align-items-center py-3 bg-{{ ColorVersion }}">
			<div class="col-md-7 d-flex align-items-center">
				<span class="ms-3">
					© {{ "now"|date("Y") }}, {{ SiteName }} - {{ "Text.Footer.Copyright" | trans }}
				</span>
			</div>
			<ul class="nav col-md-3 justify-content-end list-unstyled d-flex align-items-center">
				<li class="ms-2">
					<a class="link" href="" data-bs-toggle="modal" data-bs-target="#translateModal">
						<svg class="bi" width="20" height="20">
							<use xlink:href="#translate"></use>
						</svg>
					</a>
				</li>
				<li class="ms-2">
					<a class="link-black" href="https://github.com/YOUR-TEAM">
						<svg class="bi" width="20" height="20">
							<use xlink:href="#github"></use>
						</svg>
					</a>
				</li>
				<li class="ms-2">
					<a class="link-danger" href="https://www.youtube.com/@YOUR-TEAM">
						<svg class="bi" width="20" height="20">
							<use xlink:href="#youtube"></use>
						</svg>
					</a>
				</li>
				<li class="ms-2 col-md-1">
					<a class="link-blue" href="https://www.facebook.com/YOUR-TEAM">
						<svg class="bi" width="20" height="20">
							<use xlink:href="#facebook"></use>
						</svg>
					</a>
				</li>
			</ul>
		</footer>
		{% include '@Bootstrap/Modal.twig' %}
		{% include '@Default/Svg.twig' %}
    </body>
</html>
